@model e3_csharp.Models.Thesis

<h2>Create Thesis</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Topic"></label>
        <input asp-for="Topic" class="form-control" />
        <span asp-validation-for="Topic" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StudentId">Student</label>
        <select asp-for="StudentId" class="form-control">
            <option value="">-- Select Student --</option>
            @foreach (var s in ViewBag.Students)
            {
                <option value="@s.ID">@s.FirstName @s.LastName</option>
            }
        </select>
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Advisor"></label>
        <input asp-for="Advisor" class="form-control" />
        <span asp-validation-for="Advisor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
