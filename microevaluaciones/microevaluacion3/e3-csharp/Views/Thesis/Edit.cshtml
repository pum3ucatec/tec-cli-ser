@model e3_csharp.Models.Thesis

<h2>Edit Thesis</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ID" />

    <div class="form-group">
        <label asp-for="Topic"></label>
        <input asp-for="Topic" class="form-control" />
        <span asp-validation-for="Topic" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StudentId">Student</label>
        <select asp-for="StudentId" class="form-control">
            @foreach (var s in ViewBag.Students)
            {
                <option value="@s.ID" selected="@(s.ID == Model.StudentId)">
                    @s.FirstName @s.LastName
                </option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Advisor"></label>
        <input asp-for="Advisor" class="form-control" />
        <span asp-validation-for="Advisor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
