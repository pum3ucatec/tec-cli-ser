@model e3_csharp.Models.Thesis

<h2>Thesis Details</h2>

<div>
    <h4>@Model.Topic</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Topic</dt>
        <dd class="col-sm-9">@Model.Topic</dd>

        <dt class="col-sm-3">Student</dt>
        <dd class="col-sm-9">@Model.Student?.FirstName @Model.Student?.LastName</dd>

        <dt class="col-sm-3">Advisor</dt>
        <dd class="col-sm-9">@Model.Advisor</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>
</div>

<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
<a class="btn btn-secondary" asp-action="Index">Back</a>
