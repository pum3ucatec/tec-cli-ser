@model e3_csharp.Models.Classroom

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Registrar Aula</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

<div class="container py-5">
    <h2 class="text-success mb-4">üè´ Registrar Nueva Aula</h2>

    <form asp-action="Create" class="border p-4 bg-white rounded shadow-sm">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Code" class="form-label">C√≥digo</label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Nombre</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Status" class="form-label">Estado</label>
            <select asp-for="Status" class="form-select">
                <option value="AC">Activa</option>
                <option value="IN">Inactiva</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <input type="submit" value="‚úÖ Registrar" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-secondary">‚Ü©Ô∏è Volver al Listado</a>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
