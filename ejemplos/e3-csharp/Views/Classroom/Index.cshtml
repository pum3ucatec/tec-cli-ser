@model IEnumerable<e3_csharp.Models.Classroom>

@{
    ViewData["Title"] = "Classrooms";
}

<h1 class="mb-4">Classrooms</h1>
<p>
    <a asp-action="Create" class="btn btn-success mb-3">Create New</a>
</p>
<div class="table-responsive">
<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Capacity)</th>
            <th>@Html.DisplayNameFor(model => model.First().Description)</th>
            <th>@Html.DisplayNameFor(model => model.First().IsActive)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Capacity</td>
            <td>@item.Description</td>
            <td>
                @if(item.IsActive) {
                    <span class="badge bg-success">Active</span>
                } else {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>
