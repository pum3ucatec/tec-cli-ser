@model e3_csharp.Models.Classroom
@{
    ViewData["Title"] = "Detalles del Aula";
}
<h1>@ViewData["Title"]</h1>
<div class="container">
    <div class="row">
        <h4 class="col-sm-12">Aula</h4>
        <hr class="col-sm-12" />
        <dl class="row">
            <dt class="col-sm-2">Id</dt>
            <dd class="col-sm-10">@Model.Id</dd>
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@Model.Nombre</dd>
            <dt class="col-sm-2">Estado</dt>
            <dd class="col-sm-10">@Model.Estado</dd>
        </dl>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
        </div>
    </div>
</div>
